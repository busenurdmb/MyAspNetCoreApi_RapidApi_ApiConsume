@model List<ServiceViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Hizmet Başlığı</th>
        <th>sil</th>
       <th>güncelle</th>
        
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>@item.ID</td>
        <td>@item.Title</td>
       <td><a href="/Service/DeleteService/@item.ID" class="btn mb-1 btn-rounded btn-outline-danger">Sil</a></td>
        <td><a href="/Service/UpdateService/@item.ID" class="btn mb-1 btn-rounded btn-outline-success">Güncelle</a></td>
        
    </tr>
    }



</table>
