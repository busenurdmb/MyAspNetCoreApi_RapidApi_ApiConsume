@model List<ListBookingDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}



<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <div class="card-title">
                <h4>Rezervasyonlar</h4>
            </div>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Misafir</th>
                            <th>Giriş Tarihi</th>
                            <th>Çıkış Tarihi</th>
                            <th>Durum</th>
                            <th>Onayla</th>
                            <th>İptal Et</th>
                            <th>Bekle</th>
                            <th>Güncelle</th>
                            <th>Detaylar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <th>@count</th>
                                <td>@item.Name</td>
                                <td>@(((DateTime)item.Checkin).ToString("dd-MMM-yyyyy"))</td>
                                <td>@(((DateTime)item.CheckOut).ToString("dd-MMM-yyyyy"))</td>

                                <td> <span class="badge badge-primary px-2">@item.Status</span> </td>

                                <td><a href="/BookingAdmin/ApprovedRezervation/@item.ID" class="btn btn-outline-primary">Onayla</a></td>
                                <td><a href="/BookingAdmin/CancelRezervation/@item.ID" class="btn btn-outline-danger">İptal Et</a></td>
                                <td><a href="/BookingAdmin/WaitRezervation/@item.ID" class="btn btn-outline-warning">Bekle</a></td>
                                <td><a href="/BookingAdmin/UpdateBooking/@item.ID" class="btn btn-outline-info">Güncelle</a></td>
                                <td><a href="#" class="btn btn-outline-dark">Detaylar</a></td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
