@model List<ResultRoomDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Oda Numarası</th>
        <th>Başlık </th>
        <th>sil</th>
        <th>güncelle</th>
      
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.RommNumber</td>
            <td>@item.Title</td>
             <td><a href="/AdminRoom/DeleteAdminRoom/@item.ID" class="btn mb-1 btn-rounded btn-outline-danger">Sil</a></td>
            <td><a href="/AdminRoom/UpdateAdminRoom/@item.ID" class="btn mb-1 btn-rounded btn-outline-success">Güncelle</a></td>
            
        </tr>
    }



</table>
<a href="/AdminRoom/AddAdminRoom/" class="btn mb-1 btn-rounded btn-outline-info" >Yeni Oda Girişi</a>


