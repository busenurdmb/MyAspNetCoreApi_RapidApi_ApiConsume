@model GuestCreateDtoo

@{
    ViewData["Title"] = "AddGuest";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post">
    <label>Misafir Adı</label>
    <input type="text" asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
    <br />

    <label>Misafir Soaydı</label>
    <input type="text" asp-for="Surname" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>

    <br />
    <label>Şehir</label>
    <input type="text" asp-for="city" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>

    <br />
   
    <button class="btn btn-primary">Müşteri Ekle</button>
</form>


