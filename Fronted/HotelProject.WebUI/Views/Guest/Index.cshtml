@model List<GuestListDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Misafir Adı</th>
        <th>Misafir Soyadı</th>
        <th>Şehir</th>
        <th>sil</th>
        <th>güncelle</th>
        
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.Name</td>
            <td>@item.Surname</td>
            <td>@item.city</td>

            <td><a href="/Guest/DeleteGuest/@item.ID" class="btn mb-1 btn-rounded btn-outline-danger">Sil</a></td>
            <td><a href="/Guest/UpdateGuest/@item.ID" class="btn mb-1 btn-rounded btn-outline-success">Güncelle</a></td>
            
        </tr>
}



</table>
<a href="/Guest/AddGuest" class=" btn mb-1 btn-rounded btn-outline-info">Yeni Misafir Girişi</a>


